datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Agregado aqu√≠
  name      String?
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Request {
  id          Int    @id @default(autoincrement())
  codigo String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Employee {
  id      Int     @id @default(autoincrement())
  name    String
  createdAt   DateTime @default(now())
  position String
  salary  Float
}
